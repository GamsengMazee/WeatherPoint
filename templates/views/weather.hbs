<!DOCTYPE html>
<html lang="en">

<head>
    {{>links}}
</head>

<body>
    {{>navbar}}
    <!--------------------------------------------main header-------------------------->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-12 col-12 mx-auto">
                <div class="main_content">
                         <form action="" class="temp_form">
                           <input type="text" placeholder="Enter Your City Name" id="cityName" autocomplete="off">
                        <input type="submit" id="submitBtn" value="SEARCH">
                         </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">28 Sep</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Your Output here</p>
                        <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class="fa fa-cloud"></i></p>
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="js/main.js"></script>

    {{>footer}}
</body>

</html>